#!/usr/bin/env bash

echo 'buildpack=nginx at=nginx-config'

# Evaluate config to get $PORT
erb config/nginx.conf.erb > config/nginx.conf

n=1
while getopts :f option ${@:1:2}
do
  case "${option}"
  in
    f) FORCE=$OPTIND; n=$((n+1));;
  esac
done

# make sure we have a place for logs
mkdir -p logs/nginx
touch logs/nginx/access.log logs/nginx/error.log
echo 'buildpack=nginx at=logs-initialized'

# Redirect NGINX logs to stdout.
tail -qF -n 0 logs/nginx/*.log &

# Start NGINX
# We expect nginx to run in foreground.
if [ -z $IN_DOCKER ];then
	echo 'buildpack=nginx at=nginx-start'
	bin/nginx -p . -c config/nginx.conf.erb
	echo "buildpack=nginx at=exit"
else
	sed -i "/set_real_ip_from/d" config/nginx.conf.erb
	if [ "$DEBUG_MODE" = "full" ];then
		echo "Running nginx in full debug mode. Set DEBUG_MODE to \"normal\" when finished"
		/opt/nginx-debug/sbin/nginx -p . -c config/nginx.conf.erb
	else
		echo "Running nginx in normal debug mode. Set DEBUG_MODE to \"full\" if you need more detail."
		sbin/nginx -p . -c config/nginx.conf.erb
	fi
fi

exit 1
